@model TinTucCTSV.Models.Account.ProfileViewModel
<li class="dropdown user user-menu">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <img src="\updated/images/profile/@Model.ImageProfile"  alt="@Model.Name" class="rounded-circle img-circle" width="50" height="50" />
              <span class="hidden-xs">@Model.Name</span>
            </a>
            <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
              <!-- User image -->
              <li class="user-header">
                <img src="\updated/images/profile/@Model.ImageProfile" class="rounded-circle img-circle" alt="@Model.Name" width="50" height="50" />
                <p>
                  @Model.Name
                  <small>@Model.Created</small>
                </p>
              </li>
              <!-- Menu Body -->

              <!-- Menu Footer-->
              <li class="user-footer">
                <div class="pull-left">
                  <a asp-controller="Account" asp-action="Update" asp-route-id="@Model.Id" class="btn btn-default btn-flat">Profile</a>
                </div>
                <div class="pull-right">
                  <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "Student" })">
                    <button type="submit" class="btn btn-default btn-flat">Logout</button>
                </form>
                </div>
              </li>
            </ul>
          </li>
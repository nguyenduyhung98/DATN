@model TinTucCTSV.Models.Forum.ForumIndexModel
@{
    ViewData["Title"] = "Trang chủ";
}

<section>
    <div class="container-fuild">
        <div class="container rounded banner-ute">
            <div class="row p-5">
                <div class="col-xs-6 col-sm-6">
                    <a href="#">
                        <img src="~/updated/images/slide-ute-one.png" alt="images" class="img-fluid rounded mx-auto d-block" />
                    </a>
                </div>
                <div class="col-xs-6 col-sm-6">
                    <a href="#">
                        <img src="~/updated/images/slide-ute-facebook.png" alt="images" class="img-fluid rounded mx-auto d-block" />
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>
<!--Kết thúc phần chứa hình ảnh-->
<!--Phần chứa các quy chế biểu mẫu của trường-->
<section>
    <div class="container border-bottom border-success">
        <div class="row p-5">
            <div class="col-xs-6 col-sm-8">
                <img src="~/updated/images/quy-che-bieu-mau.png" class="img-fluid img-thumbnail" alt="...">
                <nav>
                    <h1>Biểu mẫu</h1>
                    <div class="nav nav-tabs" id="nav-tabContent" role="tablist">
                        <a class="nav-item nav-link" id="nav-contact-tab" data-toggle="tab" href="#nav-contact" role="tab" aria-controls="nav-contact" aria-selected="false">Biểu mẫu</a>
                    </div>

                </nav>
                <div class="tab-content" id="nav-tabContent">
                
                </div>
            </div>
            <div class="col-xs-6 col-sm-4">
                <table>
                    <tr>
                        <th class="text-center text-danger">
                            <strong><h2>Tin Mới Nhất</h2></strong>
                        </th>
                    </tr>
                    <tr>
                        <td>
                            @foreach (var postNew in Model.NewsPostList.Take(6))
                            {
                                <p><i class="fas fa-arrow-circle-right"></i><a asp-controller="Post" asp-action="Index" asp-route-id="@postNew.Id"> @postNew.Title <i class="far fa-clock"></i> @postNew.Created</a></p>
                            }
                        </td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
</section>

<section>
    <div class="container border-bottom border-success">
        <div class="row p-5">
                @foreach (var forum in Model.ForumList)
                {
                    <div class="col-xs-6 col-sm-6">
                        <div class="container-fuild">
                            <img src="\updated/images/forums/@forum.ImageUrl" alt="@forum.Title" class="img-fluid img-thumbnail"/>
                        </div>
                        <h3 class="text-uppercase font-weight-normal">
                            <a asp-action="Topic" asp-route-id="@forum.Id" class="text-secondary">
                                @forum.Title
                            </a>
                        </h3>
                        <header>
                            @foreach (var item in forum.PostsForum)
                            {                                
                                <p><i class="fas fa-arrow-circle-right"></i><a asp-controller="Post" asp-action="Index" asp-route-id="@item.Id"> @item.Title <i class="far fa-clock"></i> @item.Created</a></p>
                            }
                        </header>
                    </div>
                 }
        </div>
     </div>
</section>

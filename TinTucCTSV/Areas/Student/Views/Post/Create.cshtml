@model TinTucCTSV.Models.Post.NewPostModel
@{
    ViewData["Title"] = "Tạo bài viết mới";
}
<h1>Tạo bài viết mới | @Model.ForumName</h1>
<form asp-controller="Post" asp-action="AddPost">
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Content"></label>
        <textarea asp-for="Content" id="ckfinder" class="form-control"></textarea>
        <script>
            var editor = CKEDITOR.replace( '#ckfinder' );
            CKFinder.setupCKEditor( editor );
        </script>
    </div>
    <button type="submit" id="submitPost" class="btn btn-success">
        Tạo bài viết
    </button>
    <input asp-for="ForumId" type="hidden"/>
</form>


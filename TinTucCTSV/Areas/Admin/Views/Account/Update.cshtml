@using TinTucCTSV.Data.Enums
@model TinTucCTSV.Models.Account.ChangeInformation

<h1>Thông tin người dùng</h1>
        <br/>
<div class="container">
     <a asp-action="ChangePassword" asp-route-id="@Model.Id" class="btn btn-default"><i class="fas fa-key"> Đổi mật khẩu</i></a>
                
                @if (!@Model.IsLock)
                {
                    <a asp-action="UnlookUser" asp-route-id="@Model.Id" class="btn btn-success"><i class="fas fa-unlock-alt"> Mở tài khoản</i></a>
                }else{
                        <a asp-action="SetLookoutEnable" asp-route-id="@Model.Id" class="btn btn-warning"><i class="fas fa-lock"> Khóa tài khoản</i></a>
                }
</div>
<div class="row">
    <form asp-action="ChangeInformation" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
  <div class="col-xs-12 col-sm-6 col-md-6">
      <input type="hidden" asp-for="Id" />
                
                <div class="form-group">
                    <label asp-for="UserName" class="control-label"></label>
                    <input asp-for="UserName" value="@Model.UserName" disabled class="form-control" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LastName" class="control-label"></label>
                    <input asp-for="LastName" value="@Model.LastName" disabled class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FirstName" class="control-label"></label>
                    <input asp-for="FirstName" value="@Model.FirstName" disabled class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
              
  </div>
            <div class="col-xs-6 col-md-6">
                 <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" value="@Model.Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
              
                <div class="form-group">
                    <label asp-for="Role" class="control-label"></label>
                    <select asp-for="Role" asp-items="@Model.RolesList" class="form-control">
                        @*<option>@Model.Position</option>*@
                    </select>
                    <span asp-validation-for="Role" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Regency" class="control-label"></label>
                    <select asp-for="Regency" asp-items="@(new SelectList(ViewBag.DepartmentList,"Id","Name"))" class="form-control">
                    </select>
                    <span asp-validation-for="Regency" class="text-danger"></span>
                </div>
                <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" />
            </div>
         </div>
         
    </form>
</div>
            
